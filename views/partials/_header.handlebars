<header>
    <div class="container">
        <div class="logo">
            <a href="/">
                <img src="./img/example-passport.jpg" alt="" height="52px">
            </a>
        </div>
        <div id="nav">
            <button id="btn-mobile" aria-labelledby="hamburguer">
                <span id="hamburguer"></span>
            </button>
            <nav id="menu">
                <div id="lista" class="container">
                    <ul>
                        <li>
                            <a href="/">
                                <p>Início</p>
                            </a>
                        </li>
                        <li>
                            <a href="/">
                                <p>Acompanhar solicitação</p>
                            </a>
                        </li>
                        <li>
                            <a href="/">
                                <p>Contato</p>
                            </a>
                        </li>

                        <li class="ultimo">
                            <a href="/">
                                Solicitar autorização
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</header>
<style>
    header {
        background-color: #17233D;
        height: 84px;
        width: 100%;
        display: flex;
        align-items: center;
        z-index: 100;
    }

    header .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    @media(max-width: 991px) {
        #nav #menu {
            display: block;
            position: absolute;
            width: 60%;
            top: 84px;
            right: 6.5rem;
            background: #17233D;
            z-index: 99;
            transition: .4s;
            visibility: hidden;
            overflow-y: hidden;
            border-radius: 0 0 5px 5px;
            box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.4);
        }

        #nav #menu #lista ul {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            padding: 0;
            margin: 1rem 0;
        }

        #nav #menu #lista ul li {
            align-items: flex-end;
        }

        #nav #menu #lista ul li a {
            color: #FFFFFF;
            margin: 1.5rem 0;
        }

        #nav #menu #lista ul .ultimo {
            box-sizing: content-box !important;
            background-color: #E62635;
            color: #280105 !important;
            border-radius: 3px;
            padding: .7rem .6rem;
            font-weight: bold;
        }
        
        #nav #menu #lista ul .ultimo:hover {
            color: #280105 !important;
            background-color: #F7878F;
        }

        #nav #menu #lista ul li a p {
            color: #FFFFFF;
            margin: 0.8rem 0 !important;
        }

        #nav #menu #lista ul li a img {
            margin: 0 12px 0 0;
        }

        #nav.active #menu {
            visibility: visible;
        }

        #nav #btn-mobile {
            display: flex;
            flex-direction: column;
            gap: .5rem;
            padding: .5rem .8rem;
            cursor: pointer;
            background: none;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
        }

        #nav #btn-mobile #hamburguer {
            box-sizing: content-box;
            width: 20px;
            border-top: 2px solid #FFF;
        }

        #nav #btn-mobile #hamburguer::before {
            content: '';
            display: block;
            width: 20px;
            height: 2px;
            margin: .4rem 0;
            background: #FFF;
            transition: .3s;
            position: relative;
        }

        #nav #btn-mobile #hamburguer::after {
            content: '';
            display: block;
            width: 20px;
            height: 2px;
            background: #FFF;
            transition: .3s;
            position: relative;
        }

        #nav.active #btn-mobile #hamburguer {
            border-top-color: transparent
        }

        #nav.active #btn-mobile #hamburguer::before {
            transform: rotate(135deg);
        }

        #nav.active #btn-mobile #hamburguer::after {
            transform: rotate(-135deg);
            top: -10px
        }
    }

    @media(max-width: 768px) {
        #nav.active #menu {
            width: 100%;
            right: 0;
        }
        #nav.active #btn-mobile #hamburguer::after {
            top: -10px;
        }
    }
    
    @media(max-width: 425px) {
        #nav.active #btn-mobile #hamburguer::after {
            transform: rotate(-135deg);
            top: -8px
        }
    }

    @media(max-width: 375px) {
        #nav.active #btn-mobile #hamburguer::after {
            transform: rotate(-135deg);
            top: -10px
        }
    }

    @media(max-width: 320px) {
        #nav #menu #lista ul {
            margin: 1.5rem 0;
        }
        #nav #menu #lista ul li a {
            margin: 1rem 0;
        }
        #nav.active #btn-mobile #hamburguer::after {
            transform: rotate(-135deg);
            top: -10px
        }
    }
</style>
<script>
  const btnMobile = document.getElementById('btn-mobile')
  function toggleMenu() {
    const nav = document.getElementById('nav')
    nav.classList.toggle('active')
  }
  btnMobile.addEventListener('click', toggleMenu)
</script>