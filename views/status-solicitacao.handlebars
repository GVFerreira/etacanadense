<main style="flex: 1 1 0">
    <section class="section-1 full-width py-5">
        <div class="container">
            <h1>Acompanhar solicitação</h1>
            <hr>
            <div class="card">
                <div class="card-body">
                    <form action="/consultando-solicitacao" method="POST">
                        <h2>Verifique o status da sua solicitação.</h2>
                        <p>Informe seu e-mail para consultar</p>
                        <div class="row">
                            <div class="col">
                                <div class="input-group mb-3">
                                    <input type="email" class="form-control" id="codeInsert" name="codeInsert" placeholder="Seu e-mail" aria-label="Recipient's username" aria-describedby="button-addon2">
                                    <button class="btn btn-primary" type="submit" id="button-addon2">Buscar<i class="ms-2 bi bi-search"></i></button>
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                    </form>
                    <hr>
                    <section>
                        {{#search_result}}
                            <p><b>Nome: </b>{{consentAndDeclaration}}</p>
                            <p><b>E-mail de contato: </b>{{contactEmail}}</p>
                            <p><b>Telefone de contato: </b>{{contactTel}}</p>
                            <p>
                                <b>Status de pagamento: </b>
                                {{#if statusPayment}}
                                    <br>{{statusPayment}}
                                    <br>{{detailPayment}}
                                    <br>{{idPayment}}
                                {{else}}
                                    <span class="alert-danger p-1   ">Pagamento não efetuado</span>
                                {{/if}}
                            </p>
                            <p><b>Aprovado pelo Governo Canadense: </b>{{statusSolicitation}}</p>
                        {{else}}
                            <h4 class="mb-5 text-center" style="color: #F00">Não há nenhum processo com esse código</h4>
                        {{/search_result}}
                    </section>

                    <section class="mt-4 ps-2">
                        <h3>Sua solicitação não foi localizada? Entre em contato conosco</h3>
                        <a class="btn btn-primary text-uppercase" href="mailto:contato@etacanadense.com.br"><i class="bi bi-envelope-fill me-1"></i>contato@etacanadense.com.br</a>
                    </section>
                </div>
            </div>
            
        </div>
    </section>
</main>
<link rel="stylesheet" href="./css/acompanhar.css">